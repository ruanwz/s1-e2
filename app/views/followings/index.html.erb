<% @followings.each do |following| %>
  <tr>
    <td><%= following.user_id %></td>
    <td><%= following.follower %></td>
    <td><%= link_to 'Show', following %></td>
    <td><%= link_to 'Edit', edit_following_path(following) %></td>
