<h1>Listing issues</h1>

<table>
  <tr>
    <th>Repository</th>
    <th>User</th>
    <th>Status</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.repository_id %></td>
    <td><%= issue.user_id %></td>
    <td><%= issue.status_id %></td>
    <td><%= issue.content %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
